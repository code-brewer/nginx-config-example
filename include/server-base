# Include me into all server blocks.

location /apple-touch-icon {
    allow all;

    include include/static-assets;
    expires 30d;
}

location = /crossdomain.xml {
    root /etc/nginx/root/shared;

    allow all;

    include include/static-assets;
    expires 12h;

    try_files /crossdomain-$host.xml /crossdomain-wildcard.$domain_from_host.xml /crossdomain.xml =404;
}

location = /favicon.ico {
    allow all;

    log_not_found on;

    include include/static-assets;
    expires 30d;
}

location = /debug {
    return 404;
}

location /debug/ {
    return 404;
}

location = /googlee595393d123fb944.html {
    root /etc/nginx/root/shared;

    allow all;

    include include/static-assets;
    expires 12h;
}

location = /google1ec5c5bcc9bb70f0.html {
    root /etc/nginx/root/shared;

    allow all;

    include include/static-assets;
    expires 12h;
}

location = /google04d584179ee7cdb0.html {
    root /etc/nginx/root/shared;

    allow all;

    include include/static-assets;
    expires 12h;
}

# Silently reject bad requests by broken robots.
location /http:/ {
    return 404;
}

# Silently reject bad requests by broken robots.
location /https:/ {
    return 404;
}

location = /internal {
    return 404;
}

location /internal/ {
    return 404;
}

location /proxyerror/ {
    allow all;

    log_not_found on;
    ssi on;
}

location /proxyerror/fonts/ {
    allow all;

    include include/static-assets;
    expires 12h;

    log_not_found on;
}

location /proxyerror/images/ {
    allow all;

    include include/static-assets;
    expires 12h;

    log_not_found on;
}

location /proxyerror/js/ {
    allow all;

    include include/static-assets;
    expires 12h;

    log_not_found on;
}

location /proxyerror/stylesheets/ {
    allow all;

    include include/static-assets;
    expires 12h;

    log_not_found on;
}

location = /robots.txt {
    root /etc/nginx/root/shared;

    allow all;

    include include/static-assets;
    expires 12h;

    try_files /robots-$host.txt /robots-wildcard.$domain_from_host.txt /robots.txt =404;
}
